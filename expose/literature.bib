  author = {Cachin, Christian and Vukoli{\'c}, Marko},
  month = jul,
  year = {2017},
  keywords = {Computer Science - Distributed; Parallel; and Cluster Computing},
  file = {arXiv\:1707.01873 PDF:C\:\\Users\\Eric Nagel\\Zotero\\storage\\WPL8I943\\Cachin und Vukolić - 2017 - Blockchain Consensus Protocols in the Wild.pdf:application/pdf;arXiv.org Snapshot:C\:\\Users\\Eric Nagel\\Zotero\\storage\\ZT7HX76N\\1707.html:text/html},
